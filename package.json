{
  "name": "vite-reactts-electron-starter",
  "version": "0.6.0",
  "license": "MIT",
  "main": "dist-electron/index.js",
  "author": {
    "name": "Maximilian St√ºmpfl"
  },
  "description": "Starter using Vite 2+ React +Typescript + Electron for fast prototyping.",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/lTimeless/vite-reactts-electron-starter"
  },
  "productName": "vite-reactts-electron-starter",
  "scripts": {
    "dev": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "test": "jest",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "start:prod": "cross-env NODE_ENV=production ELECTRON_IS_DEV=0 electron dist-electron/index.js"
  },
  "dependencies": {
    "@material-tailwind/react": "^2.1.9",
    "@vitejs/plugin-react": "^1.2.0",
    "axios": "^1.13.1",
    "chart.js": "^4.5.1",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "i18next": "^23.11.5",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.2",
    "recharts": "^3.3.0",
    "vite": "^2.8.6",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^17.0.22",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "autoprefixer": "^10.4.4",
    "cross-env": "^10.1.0",
    "electron": "^30.0.7",
    "electron-builder": "^26.0.12",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "postcss": "^8.4.12",
    "prettier": "2.6.0",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "build": {
    "asar": true,
    "appId": "com.example.app",
    "productName": "Employee Data Visualization App",
    "files": [
      "dist-electron",
      "dist-vite"
    ],
    "win": {
      "target": "portable",
      "icon": "resources/app-icon.ico",
      "forceCodeSigning": false
    },
    "directories": {
      "buildResources": "resources"
    }
  }
}
